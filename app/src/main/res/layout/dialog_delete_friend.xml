<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_cardview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorFrameBackground"
    app:backgroundTint="@color/transparent"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/dialog_friend_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기록을 삭제하시겠습니까?"
            style="@style/freesentation4_16sp_icon"
            android:layout_marginVertical="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/dialog_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.5"
            android:orientation="vertical"
            />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/friend_cancel_btn"
            android:layout_width="105dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_diary_cancel_btn"
            app:backgroundTint="@null"
            app:iconGravity="textStart"
            app:iconTint="@null"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            app:layout_constraintEnd_toEndOf="@id/dialog_guideline"
            app:layout_constraintTop_toBottomOf="@id/dialog_friend_tv"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/friend_cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            style="@style/freesentation5_16sp"
            android:textColor="@color/colorFont"
            app:layout_constraintStart_toStartOf="@id/friend_cancel_btn"
            app:layout_constraintEnd_toEndOf="@id/friend_cancel_btn"
            app:layout_constraintTop_toTopOf="@id/friend_cancel_btn"
            app:layout_constraintBottom_toBottomOf="@id/friend_cancel_btn"/>



        <com.google.android.material.button.MaterialButton
            android:id="@+id/friend_delete_btn"
            android:layout_width="105dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_diary_write_btn"
            app:backgroundTint="@null"
            app:iconGravity="textStart"
            app:iconTint="@null"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            app:layout_constraintStart_toEndOf="@id/dialog_guideline"
            app:layout_constraintTop_toBottomOf="@id/dialog_friend_tv"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/friend_delete_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="삭제"
            style="@style/freesentation5_16sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/friend_delete_btn"
            app:layout_constraintEnd_toEndOf="@id/friend_delete_btn"
            app:layout_constraintTop_toTopOf="@id/friend_delete_btn"
            app:layout_constraintBottom_toBottomOf="@id/friend_delete_btn"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>