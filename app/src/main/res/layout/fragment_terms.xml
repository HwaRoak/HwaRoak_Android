<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    tools:context=".ui.mypage.TermsFragment">

    <androidx.core.widget.NestedScrollView
    android:id="@+id/terms_scroll_view"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/terms_area"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_box"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="47dp"
            android:layout_marginBottom="47dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/terms_text_area"
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" >

                <TextView
                    android:id="@+id/terms_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/freesentation6_16sp_title"
                    android:text="화록 서비스 이용약관"
                    android:layout_marginTop="62dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <TextView
                    android:id="@+id/terms_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/freesentation_4regular"
                    android:textSize="13sp"
                    android:textColor="#4C4C4C"
                    android:lineHeight="20dp"
                    android:text="@string/terms_full"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/terms_title"
                    app:layout_constraintLeft_toLeftOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>