<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    tools:context=".ui.mypage.TermsFragment">

    <androidx.core.widget.NestedScrollView
    android:id="@+id/terms_scroll_view"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/terms_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stateListAnimator="@null"
                app:cardElevation="0.25dp"
                android:layout_marginVertical="12dp"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="10dp" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/terms_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="#FFFFFF" >

                    <TextView
                        android:id="@+id/terms_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이용 약관"
                        style="@style/freesentation5_20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/terms_content_tv"/>

                    <ImageView
                        android:id="@+id/terms_toggle_btn"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/terms_title_tv"
                        app:layout_constraintBottom_toBottomOf="@id/terms_title_tv"/>

                    <TextView
                        android:id="@+id/terms_content_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/terms_full"
                        android:textSize="13sp"
                        android:fontFamily="@font/freesentation_4regular"
                        android:textColor="#4C4C4C"
                        android:lineHeight="20dp"
                        android:visibility="gone"
                        android:paddingTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/terms_title_tv"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/privacy_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stateListAnimator="@null"
                app:cardElevation="0.25dp"
                android:layout_marginVertical="12dp"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="10dp" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/privacy_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="#FFFFFF" >

                    <TextView
                        android:id="@+id/privacy_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="개인정보처리방침"
                        style="@style/freesentation5_20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/privacy_content_tv"/>

                    <ImageView
                        android:id="@+id/privacy_toggle_btn"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/privacy_title_tv"
                        app:layout_constraintBottom_toBottomOf="@id/privacy_title_tv"/>

                    <TextView
                        android:id="@+id/privacy_content_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/privacy_policy"
                        android:textSize="13sp"
                        android:fontFamily="@font/freesentation_4regular"
                        android:textColor="#4C4C4C"
                        android:lineHeight="20dp"
                        android:visibility="gone"
                        android:paddingTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/privacy_title_tv"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>