<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".ui.mypage.MypageFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/mypage_scroll_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mypage_profile_container"
                android:layout_width="380dp"
                android:layout_height="227dp"
                android:background="@drawable/bg_rounded_box"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:layout_marginTop="55dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/mypage_myinfo_btn"
                    android:layout_width="69dp"
                    android:layout_height="28dp"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/freesentation_5medium"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="내정보"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:background="@drawable/bg_rounded_box_lightpink"
                    app:backgroundTint="@null"
                    app:layout_columnWeight="1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_gravity="center"
                    app:layout_rowWeight="1"
                    tools:ignore="TouchTargetSizeCheck" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/mypage_profile_image_iv"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/default_profile_image"
                    app:layout_constraintTop_toBottomOf="@id/mypage_myinfo_btn"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <TextView
                    android:id="@+id/mypage_nickname_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    style="@style/freesentation5_24sp_title"
                    app:layout_constraintTop_toBottomOf="@id/mypage_profile_image_iv"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mypage_analysis_container"
                android:layout_width="380dp"
                android:layout_height="296dp"
                android:background="@drawable/bg_rounded_box"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/mypage_monthly_analysis_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이번달 감정분석 보기"
                    android:layout_marginTop="5dp"
                    style="@style/freesentation6_16sp_title"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/mypage_figure_container"
                    android:layout_width="278dp"
                    android:layout_height="151dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/mypage_monthly_analysis_tv"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/mypage_emotion_piechart"
                        android:layout_width="124dp"
                        android:layout_height="124dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                    
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/mypage_comfy_container"
                        android:layout_width="112dp"
                        android:layout_height="34dp"
                        android:paddingLeft="9dp"
                        android:background="@drawable/bg_rounded_box_white"
                        app:layout_constraintTop_toTopOf="@id/mypage_figure_container"
                        app:layout_constraintRight_toRightOf="@id/mypage_figure_container">

                        <ImageView
                            android:id="@+id/mypage_comfy_fire_iv"
                            android:layout_width="19.21dp"
                            android:layout_height="21.74dp"
                            android:src="@drawable/comfy_fire"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:id="@+id/mypage_comfy_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="평온"
                            style="@style/freesentation5_16sp"
                            android:layout_marginLeft="4dp"
                            app:layout_constraintStart_toEndOf="@id/mypage_comfy_fire_iv"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/mypage_comfy_percent_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            style="@style/freesentation4_16sp"
                            android:layout_marginLeft="10dp"
                            app:layout_constraintStart_toEndOf="@id/mypage_comfy_tv"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/mypage_happy_container"
                        android:layout_width="112dp"
                        android:layout_height="34dp"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="9dp"
                        android:background="@drawable/bg_rounded_box_white"
                        app:layout_constraintTop_toBottomOf="@id/mypage_comfy_container"
                        app:layout_constraintRight_toRightOf="@id/mypage_figure_container">

                        <ImageView
                            android:id="@+id/mypage_happy_fire_iv"
                            android:layout_width="19.21dp"
                            android:layout_height="21.74dp"
                            android:src="@drawable/happy_fire"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:id="@+id/mypage_happy_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="행복"
                            style="@style/freesentation5_16sp"
                            android:layout_marginLeft="4dp"
                            app:layout_constraintStart_toEndOf="@id/mypage_happy_fire_iv"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/mypage_happy_percent_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            style="@style/freesentation4_16sp"
                            android:layout_marginLeft="10dp"
                            app:layout_constraintStart_toEndOf="@id/mypage_happy_tv"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/mypage_depressed_container"
                        android:layout_width="112dp"
                        android:layout_height="34dp"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="9dp"
                        android:background="@drawable/bg_rounded_box_white"
                        app:layout_constraintTop_toBottomOf="@id/mypage_happy_container"
                        app:layout_constraintRight_toRightOf="@id/mypage_figure_container">

                        <ImageView
                            android:id="@+id/mypage_depressed_fire_iv"
                            android:layout_width="19.21dp"
                            android:layout_height="21.74dp"
                            android:src="@drawable/depressed_fire"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:id="@+id/mypage_depressed_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="우울"
                            style="@style/freesentation5_16sp"
                            android:layout_marginLeft="4dp"
                            app:layout_constraintStart_toEndOf="@id/mypage_depressed_fire_iv"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/mypage_depressed_percent_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            style="@style/freesentation4_16sp"
                            android:layout_marginLeft="10dp"
                            app:layout_constraintStart_toEndOf="@id/mypage_depressed_tv"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/mypage_angry_container"
                        android:layout_width="112dp"
                        android:layout_height="34dp"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="9dp"
                        android:background="@drawable/bg_rounded_box_white"
                        app:layout_constraintTop_toBottomOf="@id/mypage_depressed_container"
                        app:layout_constraintRight_toRightOf="@id/mypage_figure_container">

                        <ImageView
                            android:id="@+id/mypage_angry_fire_iv"
                            android:layout_width="19.21dp"
                            android:layout_height="21.74dp"
                            android:src="@drawable/angry_fire"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:id="@+id/mypage_angry_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="분노"
                            style="@style/freesentation5_16sp"
                            android:layout_marginLeft="4dp"
                            app:layout_constraintStart_toEndOf="@id/mypage_angry_fire_iv"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/mypage_angry_percent_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            style="@style/freesentation4_16sp"
                            android:layout_marginLeft="10dp"
                            app:layout_constraintStart_toEndOf="@id/mypage_angry_tv"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/mypage_detail_btn"
                    android:layout_width="328dp"
                    android:layout_height="45dp"
                    android:fontFamily="@font/freesentation_5medium"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:text="상세보기"
                    android:textColor="#4C4C4C"
                    android:textSize="16sp"
                    android:background="@drawable/bg_rounded_box_white"
                    app:backgroundTint="@null"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_rowWeight="1"
                    tools:ignore="TouchTargetSizeCheck"
                    android:layout_marginTop="19dp"
                    app:layout_constraintTop_toBottomOf="@id/mypage_figure_container"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/mypage_recorded_emotion_container"
                    android:layout_width="185dp"
                    android:layout_height="166dp"
                    android:background="@drawable/bg_rounded_box"
                    android:layout_marginRight="8dp">

                    <TextView
                        android:id="@+id/mypage_recorded_emotion_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:text="기록한 화록"
                        style="@style/freesentation6_16sp_title"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <ImageView
                        android:id="@+id/mypage_fire_picture_iv"
                        android:layout_width="61dp"
                        android:layout_height="61dp"
                        android:src="@drawable/fire_picture"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="14dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/mypage_count_diary_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="80dp"
                        android:text=""
                        android:fontFamily="@font/freesentation_6semibold"
                        android:textColor="#4C4C4C"
                        android:textSize="32sp"
                        android:gravity="end"
                        app:layout_constraintStart_toEndOf="@id/mypage_fire_picture_iv"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/mypage_fire_picture_iv"
                        app:layout_constraintBottom_toBottomOf="@id/mypage_fire_picture_iv"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/mypage_dday_container"
                    android:layout_width="185dp"
                    android:layout_height="166dp"
                    android:background="@drawable/bg_rounded_box"
                    >

                    <TextView
                        android:id="@+id/mypage_time_left_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:text="다음아이템까지"
                        style="@style/freesentation6_16sp_title"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <FrameLayout
                        android:id="@+id/mypage_item_image_container"
                        android:layout_width="61dp"
                        android:layout_height="61dp"
                        android:background="@drawable/bg_rounded_box_iconbg"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="14dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:id="@+id/mypage_item_image_iv"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:scaleType="fitCenter" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/mypage_dday_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="80dp"
                        android:text=""
                        android:fontFamily="@font/freesentation_6semibold"
                        android:textSize="32sp"
                        android:textColor="#4C4C4C"
                        android:gravity="end"
                        app:layout_constraintStart_toEndOf="@id/mypage_item_image_container"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/mypage_item_image_container"
                        app:layout_constraintBottom_toBottomOf="@id/mypage_item_image_container"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mypage_menu_container"
                android:layout_width="380dp"
                android:layout_height="150dp"
                android:background="@drawable/bg_rounded_box"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="27dp"
                android:paddingBottom="27dp">

                <TextView
                    android:id="@+id/mypage_search_user_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="유저 검색"
                    style="@style/freesentation5_16sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:id="@+id/mypage_notification_setting_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="알림설정"
                    style="@style/freesentation5_16sp"
                    android:layout_marginTop="18dp"
                    app:layout_constraintTop_toBottomOf="@id/mypage_search_user_tv"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:id="@+id/mypage_announcement_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="공지사항"
                    style="@style/freesentation5_16sp"
                    android:layout_marginTop="18dp"
                    app:layout_constraintTop_toBottomOf="@id/mypage_notification_setting_tv"
                    app:layout_constraintLeft_toLeftOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/mypage_terms_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="약관 및 정책"
                style="@style/freesentation5_16sp"
                android:textColor="#BCBCBC"
                android:layout_marginTop="59dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/mypage_logout_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그아웃하기"
                style="@style/freesentation5_16sp"
                android:textColor="#BCBCBC"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>