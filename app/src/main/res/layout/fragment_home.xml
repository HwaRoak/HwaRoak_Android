<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".ui.main.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rounded_container"
        android:layout_width="376dp"
        android:layout_height="505dp"
        android:background="@drawable/bg_home_rounded_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3">

        <TextView
            android:id="@+id/tv_speech_bubble"
            android:layout_width="237dp"
            android:layout_height="94dp"
            android:paddingBottom="30dp"
            android:text="무슨 일이 있어?"
            android:background="@drawable/bg_home_speech_bubble"
            android:gravity="center"
            style="@style/freesentation6_20sp_title"
            app:layout_constraintBottom_toTopOf="@id/character_container"
            app:layout_constraintStart_toStartOf="@id/character_container"
            app:layout_constraintEnd_toEndOf="@id/character_container"
            />
        <FrameLayout
            android:id="@+id/character_container"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/iv_character"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/img_home_hwaroaki"
            />

        <ImageView
            android:id="@+id/iv_hwaroak_item_cheeze"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/img_home_hwaroak_item_cheeze"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_hwaroak_item_chicken"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/img_home_hwaroak_item_chicken"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_hwaroak_item_chopstick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/img_home_hwaroak_item_chopstick"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_hwaroak_item_coal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/img_home_hwaroak_item_coal"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_hwaroak_item_cup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/img_home_hwaroak_item_cup"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_hwaroak_item_egg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/img_home_hwaroak_item_egg"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_hwaroak_item_mashmellow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/img_home_hwaroak_item_mashmellow"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_hwaroak_item_meat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/img_home_hwaroak_item_meat"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_hwaroak_item_paper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/img_home_hwaroak_item_paper"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_hwaroak_item_potato"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/img_home_hwaroak_item_potato"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_hwaroak_item_ruby"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/img_home_hwaroak_item_ruby"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_hwaroak_item_soup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/img_home_hwaroak_item_soup"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_hwaroak_item_tire"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/img_home_hwaroak_item_tire"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_hwaroak_item_tissue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/img_home_hwaroak_item_tissue"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_hwaroak_item_trash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/img_home_hwaroak_item_trash"
            android:visibility="gone"/>
        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_item_rv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:spanCount="1"
            tools:listitem="@layout/item_locker_item" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/progress_emotion_gauge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_home_emotion_gauge_default"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/rounded_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/grid_emotion_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:columnCount="3"
        app:rowCount="3"
        app:layout_constraintTop_toBottomOf="@id/progress_emotion_gauge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_sad"
            android:layout_width="99dp"
            android:layout_height="45dp"
            android:layout_margin="4dp"
            android:background="@drawable/bg_home_emotion_btn"
            app:backgroundTint="@null"
            android:text="슬퍼ㅜㅜ"
            android:fontFamily="@font/freesentation_4regular"
            android:textColor="#4C4C4C"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_gravity="fill"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_annoyed"
            android:layout_width="99dp"
            android:layout_height="45dp"
            android:layout_margin="4dp"
            android:background="@drawable/bg_home_emotion_btn"
            app:backgroundTint="@null"
            android:text="짜증나::"
            android:fontFamily="@font/freesentation_4regular"
            android:textColor="#4C4C4C"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_gravity="fill"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_joy"
            android:layout_width="99dp"
            android:layout_height="45dp"
            android:layout_margin="4dp"
            android:background="@drawable/bg_home_emotion_btn"
            app:backgroundTint="@null"
            android:text="신난다!"
            android:fontFamily="@font/freesentation_4regular"
            android:textColor="#4C4C4C"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_gravity="fill"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_depress"
            android:layout_width="99dp"
            android:layout_height="45dp"
            android:layout_margin="4dp"
            android:background="@drawable/bg_home_emotion_btn"
            app:backgroundTint="@null"
            android:text="우울해.."
            android:fontFamily="@font/freesentation_4regular"
            android:textColor="#4C4C4C"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_gravity="fill"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_excited"
            android:layout_width="99dp"
            android:layout_height="45dp"
            android:layout_margin="4dp"
            android:background="@drawable/bg_home_emotion_btn"
            app:backgroundTint="@null"
            android:text="설렌다ㅎㅎ"
            android:fontFamily="@font/freesentation_4regular"
            android:textColor="#4C4C4C"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_gravity="fill"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_happy"
            android:layout_width="99dp"
            android:layout_height="45dp"
            android:layout_margin="4dp"
            android:background="@drawable/bg_home_emotion_btn"
            app:backgroundTint="@null"
            android:text="행복해~"
            android:fontFamily="@font/freesentation_4regular"
            android:textColor="#4C4C4C"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_gravity="fill"/>
    </androidx.gridlayout.widget.GridLayout>



</androidx.constraintlayout.widget.ConstraintLayout>