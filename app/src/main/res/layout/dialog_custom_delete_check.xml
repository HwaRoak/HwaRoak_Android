<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_cardview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorFrameBackground"
    app:backgroundTint="@color/transparent"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        >


        <TextView
            android:id="@+id/dialog_main_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기록을 삭제하시겠습니까?"
            style="@style/freesentation4_16sp_icon"
            android:layout_marginVertical="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/dialog_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.5"
            android:orientation="vertical"
            />

        <ImageButton
            android:id="@+id/dialog_cancel_btn"
            android:layout_width="105dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_calendar_dialog_cancel"
            android:backgroundTint="@color/transparent"
            app:layout_constraintEnd_toEndOf="@id/dialog_guideline"
            app:layout_constraintTop_toBottomOf="@id/dialog_main_tv"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:id="@+id/dialog_delete_btn"
            android:layout_width="105dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_calendar_dialog_delete"
            android:backgroundTint="@color/transparent"
            app:layout_constraintStart_toEndOf="@id/dialog_guideline"
            app:layout_constraintTop_toBottomOf="@id/dialog_main_tv"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>