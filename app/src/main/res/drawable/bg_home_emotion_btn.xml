<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFE4D0"/>
            <stroke android:width="1dp" android:color="#DDDDDD"/>
            <corners android:radius="7dp"/>
        </shape>
    </item>

    <item>
        <layer-list>
            <item android:top="2dp" android:left="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#0D000000"/> <corners android:radius="9dp"/>
                </shape>
            </item>

            <item android:bottom="2dp" android:right="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorFrameBackground"/> <stroke android:width="1dp" android:color="@color/colorFrameBackground"/>
                    <corners android:radius="7dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>