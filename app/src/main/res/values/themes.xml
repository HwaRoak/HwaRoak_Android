<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HwaRoak" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>


    <!--bottom Navigation transparent 뒤에 동그라미를 없앤다-->
    <style name="BottomNav_NoIndicator" parent="">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--Splash Screen 테마-->
    <style name="HwaRoakSplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/colorPrimary</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/ic_splash_logo</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">1000</item>
    </style>


    <!--글꼴 style 정의-->
    <!-- 일반 글씨 -->
    <style name="freesentation4_16sp">
        <item name="android:fontFamily">@font/freesentation_4regular</item>
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="freesentation5_16sp">
        <item name="android:fontFamily">@font/freesentation_5medium</item>
